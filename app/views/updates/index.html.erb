<center>
  <% if logged_in? && current_user.admin? %>
    <%= link_to "new", new_update_path, style: 'color: white    ;', class: ' btn btn-lg button-blue' %>

  <% end %>

  <h1 class= "green_row">
    Updates planed for next versions
  </h1>
  <%= image_tag("legende.png") %>
</center>
<div class="table-responsive">
  <table class="table table-striped">
    <tr class="warning">
      <th>Detail</th>
      <th>Status</th>
      <% if logged_in? && current_user.admin? %>
        <th>Edit</th>
        <th>Delete</th>
      <% end %>
    </tr>

    <tbody>
      <% @updates.each do |update| %>
        <tr>
          <td><%= update.detail %></td>
          <td><%= image_tag(update.status.to_s+".png", :alt => update.status)  %></td>
          <% if logged_in? && current_user.admin? %>
            <td><%= link_to 'Edit', edit_update_path(update) %></td>
            <td><%= link_to 'Destroy', update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
