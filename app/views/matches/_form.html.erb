<%= form_for(match) do |f| %>
 <%= render 'shared/error_messages', object: f.object %>
  <% if match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% match.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



    <%= f.label :salle %>
    <%= f.text_field :salle %>

    <%= f.label :ville, "Addresse" %>
    <%= f.text_field :ville %>

    <%= f.label :metro, "Metro/RER" %>
    <%= f.text_field :metro %>

    <%= f.hidden_field :orga, value: current_user.id %>
    <%= f.label :date %>
    <%= f.text_field :date, :value => yield(:formate), 'data-behaviour' => 'datepicker' %>

    <%= f.submit yield(:button_text), class: "btn button-red" %>

<% end %>

    <script type="text/javascript">
$('[data-behaviour~=datepicker]').datepicker({
    format: 'dd/mm/yyyy',
    language: 'fr',
    todayHighlight: true,
    todayBtn: "linked"
} );
    </script>
